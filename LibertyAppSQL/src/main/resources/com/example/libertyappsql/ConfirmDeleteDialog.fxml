<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane fx:controller="com.example.libertyappsql.controller.ConfirmDeleteController"
            prefHeight="280.0" prefWidth="450.0"
            style="-fx-background-color: linear-gradient(to bottom, #e74c3c, #7d2d3f);"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1">

    <StackPane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               alignment="CENTER">

        <!-- Прозорий фон -->
        <Rectangle width="400" height="220"
                   arcWidth="25" arcHeight="25"
                   fill="rgba(255,255,255,0.12)"
                   stroke="white"
                   strokeWidth="3"/>

        <VBox alignment="CENTER" spacing="20.0"
              maxWidth="400.0" prefWidth="400.0"
              maxHeight="220.0" prefHeight="220.0">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>

            <Label text="ПІДТВЕРДЖЕННЯ"
                   style="-fx-font-size: 24px; -fx-font-family: monospace; -fx-letter-spacing: 2px;"
                   textFill="white"
                   textAlignment="CENTER">
                <effect>
                    <DropShadow color="#FFFFFFAA" radius="25" spread="0.3"/>
                </effect>
            </Label>

            <Label fx:id="confirmMessageLabel"
                   text="Ви впевнені, що хочете видалити запис? Цю дію неможливо скасувати."
                   textFill="white" wrapText="true"
                   textAlignment="CENTER"
                   style="-fx-font-family: monospace; -fx-font-size: 14px;"/>

            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="deleteButton"
                        text="Так, видалити"
                        style="-fx-background-color: #b83225;
                               -fx-text-fill: white;
                               -fx-font-family: monospace;
                               -fx-font-size: 16px;
                               -fx-padding: 10;
                               -fx-background-radius: 25;
                               -fx-border-radius: 25;">
                    <style>
                        .button:pressed {
                        -fx-background-color: #9c2720;
                        }
                        .button:hover, .button:focused {
                        -fx-effect: none;
                        }
                    </style>
                </Button>

                <Button fx:id="cancelButton" cancelButton="true"
                        text="Скасувати"
                        style="-fx-background-color: rgba(255,255,255,0.15);
                               -fx-text-fill: white;
                               -fx-font-family: monospace;
                               -fx-font-size: 16px;
                               -fx-padding: 10;
                               -fx-background-radius: 25;
                               -fx-border-radius: 25;
                               -fx-border-color: rgba(255,255,255,0.3);"/>
            </HBox>
        </VBox>
    </StackPane>
</AnchorPane>
