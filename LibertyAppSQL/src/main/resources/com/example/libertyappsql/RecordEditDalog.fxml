<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:controller="com.example.libertyappsql.controller.RecordEditController" prefHeight="350.0" prefWidth="500.0" style="-fx-background-color: linear-gradient(to bottom, #ff9a8b 0%, #ff6a88 40%, #ff4757 70%, #8b1e3f 100%);" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" spacing="25.0" style="-fx-background-color: rgba(255,255,255,0.15); -fx-border-color: rgba(255,255,255,0.3); -fx-border-radius: 25; -fx-background-radius: 25;" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">
        <effect><DropShadow color="#8b1e3f5e" radius="40" /></effect>
        <padding><Insets bottom="25.0" left="25.0" right="25.0" top="25.0" /></padding>
        <children>
            <Label style="-fx-letter-spacing: 2px;" text="РЕДАГУВАННЯ ЗАПИСУ" textFill="white">
                <font><Font name="Monospaced Bold" size="20.0" /></font>
            </Label>
            <GridPane hgap="15.0" vgap="15.0">
                <children>
                    <Label text="ID:" textFill="white" GridPane.rowIndex="0"><font><Font name="Monospaced Regular" size="14.0" /></font></Label>
                    <Label text="Ім'я:" textFill="white" GridPane.rowIndex="1"><font><Font name="Monospaced Regular" size="14.0" /></font></Label>
                    <TextField fx:id="idField" editable="false" promptText="Генерується автоматично" style="-fx-background-color: rgba(255,255,255,0.1); -fx-border-color: rgba(255,255,255,0.3); -fx-text-fill: #cccccc;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <TextField fx:id="firstNameField" style="-fx-background-color: rgba(255,255,255,0.1); -fx-border-color: rgba(255,255,255,0.3); -fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                </children>
            </GridPane>
            <ButtonBar>
                <buttons>
                    <Button fx:id="saveButton" mnemonicParsing="false" style="-fx-background-color: rgba(139,30,63,0.7); -fx-text-fill: white; -fx-border-color: rgba(255,255,255,0.3);" text="Зберегти" />
                    <Button fx:id="cancelButton" mnemonicParsing="false" style="-fx-background-color: rgba(255,255,255,0.15); -fx-text-fill: white; -fx-border-color: rgba(255,255,255,0.3);" text="Скасувати" />
                </buttons>
            </ButtonBar>
        </children>
    </VBox>
</AnchorPane>