<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:controller="com.example.libertyappsql.controller.RecordEditController"
            prefHeight="600.0" prefWidth="550.0"
            style="-fx-background-color: linear-gradient(to bottom, #ff9a8b 0%, #ff6a88 40%, #ff4757 70%, #8b1e3f 100%);"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1">

    <VBox alignment="CENTER" spacing="20.0"
          style="-fx-background-color: rgba(255,255,255,0.15);
                 -fx-border-color: rgba(255,255,255,0.3);
                 -fx-border-radius: 25;
                 -fx-background-radius: 25;"
          AnchorPane.bottomAnchor="25.0"
          AnchorPane.leftAnchor="25.0"
          AnchorPane.rightAnchor="25.0"
          AnchorPane.topAnchor="25.0">

        <effect>
            <DropShadow color="#8b1e3f5e" radius="40"/>
        </effect>

        <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
        </padding>

        <children>
            <!-- Заголовок -->
            <Label style="-fx-letter-spacing: 2px;" text="РЕДАГУВАННЯ ЗАПИСУ" textFill="white">
                <font>
                    <Font name="Monospaced Bold" size="20.0"/>
                </font>
            </Label>

            <!-- ScrollPane для прокрутки полей -->
            <ScrollPane fitToWidth="true"
                        style="-fx-background-color: transparent;
                              -fx-background: transparent;"
                        VBox.vgrow="ALWAYS">
                <content>
                    <GridPane hgap="15.0" vgap="15.0">
                        <padding>
                            <Insets top="10" bottom="10"/>
                        </padding>

                        <children>
                            <!-- ID -->
                            <Label text="ID:" textFill="white" GridPane.rowIndex="0">
                                <font>
                                    <Font name="Monospaced Regular" size="14.0"/>
                                </font>
                            </Label>
                            <TextField fx:id="idField"
                                       editable="false"
                                       promptText="Генерується автоматично"
                                       style="-fx-background-color: rgba(255,255,255,0.1);
                                             -fx-border-color: rgba(255,255,255,0.3);
                                             -fx-text-fill: #cccccc;
                                             -fx-background-radius: 10;
                                             -fx-border-radius: 10;"
                                       GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                            <!-- Ім'я -->
                            <Label text="Ім'я: *" textFill="white" GridPane.rowIndex="1">
                                <font>
                                    <Font name="Monospaced Regular" size="14.0"/>
                                </font>
                            </Label>
                            <TextField fx:id="firstNameField"
                                       promptText="Введіть ім'я"
                                       style="-fx-background-color: rgba(255,255,255,0.1);
                                             -fx-border-color: rgba(255,255,255,0.3);
                                             -fx-text-fill: white;
                                             -fx-prompt-text-fill: rgba(255,255,255,0.6);
                                             -fx-background-radius: 10;
                                             -fx-border-radius: 10;"
                                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                            <!-- Прізвище -->
                            <Label text="Прізвище:" textFill="white" GridPane.rowIndex="2">
                                <font>
                                    <Font name="Monospaced Regular" size="14.0"/>
                                </font>
                            </Label>
                            <TextField fx:id="lastNameField"
                                       promptText="Введіть прізвище"
                                       style="-fx-background-color: rgba(255,255,255,0.1);
                                             -fx-border-color: rgba(255,255,255,0.3);
                                             -fx-text-fill: white;
                                             -fx-prompt-text-fill: rgba(255,255,255,0.6);
                                             -fx-background-radius: 10;
                                             -fx-border-radius: 10;"
                                       GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                            <!-- Email -->
                            <Label text="Email:" textFill="white" GridPane.rowIndex="3">
                                <font>
                                    <Font name="Monospaced Regular" size="14.0"/>
                                </font>
                            </Label>
                            <TextField fx:id="emailField"
                                       promptText="example@mail.com"
                                       style="-fx-background-color: rgba(255,255,255,0.1);
                                             -fx-border-color: rgba(255,255,255,0.3);
                                             -fx-text-fill: white;
                                             -fx-prompt-text-fill: rgba(255,255,255,0.6);
                                             -fx-background-radius: 10;
                                             -fx-border-radius: 10;"
                                       GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                            <!-- Телефон -->
                            <Label text="Телефон:" textFill="white" GridPane.rowIndex="4">
                                <font>
                                    <Font name="Monospaced Regular" size="14.0"/>
                                </font>
                            </Label>
                            <TextField fx:id="phoneField"
                                       promptText="+380 XX XXX XXXX"
                                       style="-fx-background-color: rgba(255,255,255,0.1);
                                             -fx-border-color: rgba(255,255,255,0.3);
                                             -fx-text-fill: white;
                                             -fx-prompt-text-fill: rgba(255,255,255,0.6);
                                             -fx-background-radius: 10;
                                             -fx-border-radius: 10;"
                                       GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                            <!-- Дата народження -->
                            <Label text="Дата народж.:" textFill="white" GridPane.rowIndex="5">
                                <font>
                                    <Font name="Monospaced Regular" size="14.0"/>
                                </font>
                            </Label>
                            <DatePicker fx:id="birthDatePicker"
                                        promptText="Виберіть дату"
                                        style="-fx-background-color: rgba(255,255,255,0.1);
                                              -fx-border-color: rgba(255,255,255,0.3);
                                              -fx-background-radius: 10;
                                              -fx-border-radius: 10;"
                                        GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                            <!-- Адреса -->
                            <Label text="Адреса:" textFill="white" GridPane.rowIndex="6">
                                <font>
                                    <Font name="Monospaced Regular" size="14.0"/>
                                </font>
                            </Label>
                            <TextField fx:id="addressField"
                                       promptText="Введіть адресу"
                                       style="-fx-background-color: rgba(255,255,255,0.1);
                                             -fx-border-color: rgba(255,255,255,0.3);
                                             -fx-text-fill: white;
                                             -fx-prompt-text-fill: rgba(255,255,255,0.6);
                                             -fx-background-radius: 10;
                                             -fx-border-radius: 10;"
                                       GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                        </children>

                        <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="120.0" prefWidth="120.0"/>
                            <ColumnConstraints hgrow="ALWAYS" minWidth="250.0"/>
                        </columnConstraints>
                    </GridPane>
                </content>
            </ScrollPane>

            <!-- Кнопки -->
            <ButtonBar>
                <buttons>
                    <Button fx:id="saveButton"
                            mnemonicParsing="false"
                            text="Зберегти"
                            style="-fx-background-color: rgba(139,30,63,0.7);
                                   -fx-text-fill: white;
                                   -fx-border-color: rgba(255,255,255,0.3);
                                   -fx-background-radius: 20;
                                   -fx-border-radius: 20;
                                   -fx-padding: 8 20;
                                   -fx-font-family: monospace;
                                   -fx-font-size: 14px;"/>

                    <Button fx:id="cancelButton"
                            mnemonicParsing="false"
                            text="Скасувати"
                            style="-fx-background-color: rgba(255,255,255,0.15);
                                   -fx-text-fill: white;
                                   -fx-border-color: rgba(255,255,255,0.3);
                                   -fx-background-radius: 20;
                                   -fx-border-radius: 20;
                                   -fx-padding: 8 20;
                                   -fx-font-family: monospace;
                                   -fx-font-size: 14px;"/>
                </buttons>
            </ButtonBar>

            <Label text="* - обов'язкові поля"
                   textFill="rgba(255,255,255,0.7)"
                   style="-fx-font-family: monospace; -fx-font-size: 11px;"/>
        </children>
    </VBox>
</AnchorPane>